<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".egzersiz.IngilizceEgzersiz">

    <Button
        android:id="@+id/btnKelime"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/anasayfa_buton_sec"
        android:fontFamily="@font/poppins_bold"
        android:onClick="kelimeDinle"
        android:text="BİR HATA OLUŞTU"


        android:textColor="@drawable/anasayfa_buton_yazi_sec"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/btnA"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:color="@android:color/tertiary_text_dark"
        android:onClick="butonA"
        android:background="@drawable/seviye_sec"
        android:baselineAligned="false"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@drawable/seviye_buton_yazi_sec"

        app:layout_constraintBottom_toTopOf="@+id/btnB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"


        android:background="@drawable/seviye_sec"
        android:baselineAligned="false"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@drawable/seviye_buton_yazi_sec"

        android:layout_marginBottom="10dp"
        android:onClick="butonB"
        app:layout_constraintBottom_toTopOf="@+id/btnC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"

        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"


        android:background="@drawable/seviye_sec"
        android:baselineAligned="false"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@drawable/seviye_buton_yazi_sec"

        android:onClick="butonC"
        app:layout_constraintBottom_toTopOf="@+id/btnD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"


        android:layout_marginBottom="25dp"
        android:background="@drawable/seviye_sec"
        android:baselineAligned="false"
        android:color="@android:color/tertiary_text_dark"

        android:fontFamily="@font/poppins_bold"
        android:onClick="butonD"
        android:textColor="@drawable/seviye_buton_yazi_sec"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/bgnokta" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"

        android:gravity="center|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center|center_horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/ogren"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:onClick="anasayfa"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="ANASAYFA" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/durum"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Durumum" />

            <Button
                android:id="@+id/btnAyarlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/ayarlar"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:onClick="ayarlar"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Ayarlar" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtSayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/_1_5"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnKelime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHedef3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/poppins_bold"
        android:text="TÜRKÇE / İNGİLİZCE TESTİ"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>