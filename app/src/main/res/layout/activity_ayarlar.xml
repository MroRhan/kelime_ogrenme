<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayarlar">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitXY"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:srcCompat="@drawable/bgnokta" />

    <TextView
        android:id="@+id/txtHedef9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/poppins_bold"
        android:text="AYARLAR"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"

        android:gravity="center|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center|center_horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/ogren"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:onClick="anasayfa"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Anasayfa" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/durum"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:onClick="durumum"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Durumum" />

            <Button
                android:id="@+id/btnAyarlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:drawableTop="@drawable/ayarlar"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:onClick="ayarlar"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Ayarlar" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/anasayfa_buton_sec"
                android:drawableEnd="@drawable/right_ok"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|left|center_vertical"
                android:onClick="gunlukKelime"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Günlük kelime sayısı"
                android:textAllCaps="false"
                android:textColor="@drawable/anasayfa_buton_yazi_sec" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/anasayfa_buton_sec"
                android:drawableEnd="@drawable/right_ok"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|left|center_vertical"
                android:onClick="ogrenmeSeviye"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Öğrenme seviyesi"
                android:textAllCaps="false"
                android:textColor="@drawable/anasayfa_buton_yazi_sec" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/anasayfa_buton_sec"
                android:drawableEnd="@drawable/right_ok"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|left|center_vertical"
                android:onClick="kelimeSifirla"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Kelimeleri sıfırla"
                android:textAllCaps="false"
                android:textColor="@drawable/anasayfa_buton_yazi_sec" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/anasayfa_buton_sec"
                android:drawableEnd="@drawable/right_ok"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|left|center_vertical"
                android:onClick="ayarlarPaylas"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Arkadaşlarınla paylaş"
                android:textAllCaps="false"
                android:textColor="@drawable/anasayfa_buton_yazi_sec" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/anasayfa_buton_sec"
                android:drawableEnd="@drawable/right_ok"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center|left|center_vertical"
                android:onClick="hakkimizda"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Hakkımızda"
                android:textAllCaps="false"
                android:textColor="@drawable/anasayfa_buton_yazi_sec" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>